<div class="col-lg-12">
	<section class="row">
		<div class="col-lg-12">
		<div class="card mb-6">
			<div class="card-block">
				<h3 class="card-title">{{t "route.network.configuration"}}</h3>
				<form class="form" action="#">
					<div class="button-group">
						<button type="button" class="btn btn-md btn-primary" {{action "saveConfiguration"}}>{{t "route.common.save" }}</button>
					</div>
					{{ai-input title="route.common.id" readOnly=true value=model.networkConfiguration.id}}			
					{{ai-input title="route.common.name" value=model.networkConfiguration.name}}									
					{{ai-input title="route.network.learningRate" value=model.networkConfiguration.learningRate}}									
					{{ai-input title="route.network.backprop" value=model.networkConfiguration.backprop}}									
					{{ai-input title="route.network.seed" value=model.networkConfiguration.seed}}									
					{{ai-select items=model.weightInitializations title="route.weightInitialization.title" value=model.networkConfiguration.weightInit selected=(action "weightInitSelected")}}
					{{ai-select items=model.activations title="route.network.activation" value=model.networkConfiguration.activation selected=(action "activationSelected")}}
					{{ai-select items=model.updaters title="route.network.updater" value=model.networkConfiguration.updater selected=(action "updaterSelected")}}
				</form>
			</div>
		</div>
	</div>
</section>
</div>
{{outlet}}
